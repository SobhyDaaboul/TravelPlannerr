@page "{id:int}"
@model TravelPlannerr.Pages.Destinations.DetailsModel
@{
    ViewData["Title"] = "Destination Details";
}

<div class="max-w-5xl mx-auto px-4 py-8">
    <!-- Destination Info -->
    <div class="mb-6">
        <h1 class="text-3xl font-bold text-gray-800 mb-2">@Model.Destination.Name</h1>

        @* Destination Image *@
        @if (!string.IsNullOrEmpty(Model.Destination.ImagePath))
        {
            <img src="@Model.Destination.ImagePath" alt="Destination Image" class="w-full h-64 object-cover rounded-lg shadow mb-4" />
        }

        <p class="text-gray-600"><span class="font-semibold">Location:</span> @Model.Destination.City</p>
        <p class="text-gray-700 mt-2">@Model.Destination.Description</p>
    </div>

    <!-- Hotels Section -->
    @if (Model.Destination.Hotels != null && Model.Destination.Hotels.Any())
    {
        <h2 class="text-2xl font-semibold text-gray-700 mb-4">Hotels in this Destination</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            @foreach (var hotel in Model.Destination.Hotels)
            {
                <div class="bg-white rounded-lg shadow p-4">
                    @if (!string.IsNullOrEmpty(hotel.ImagePath))
                    {
                        <img src="@hotel.ImagePath" alt="@hotel.Name" class="w-full h-48 object-cover rounded mb-3" />
                    }

                    <h3 class="text-xl font-semibold text-gray-800 mb-1">@hotel.Name</h3>
                    <p class="text-gray-600"><span class="font-medium">Address:</span> @hotel.Address</p>
                    <p class="text-gray-600"><span class="font-medium">Rating:</span> @hotel.Rating</p>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-gray-500">No hotels available for this destination.</p>
    }

    <div class="mt-6">
        <a asp-page="./Index" class="inline-block bg-gray-200 hover:bg-gray-300 text-gray-700 font-medium py-2 px-4 rounded">Back to List</a>
    </div>
</div>
