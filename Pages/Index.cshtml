@page
@model TravelPlannerr.Pages.IndexModel
@{
    ViewData["Title"] = "Home - Discover Your Next Adventure";
}

<!-- Hero Section -->
<section class="hero-gradient text-white py-20 relative overflow-hidden">
    <div class="absolute inset-0 bg-black opacity-20"></div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-5xl md:text-6xl font-bold mb-6 animate-fade-in">
            Discover Your Next
            <span class="text-accent">Adventure</span>
        </h1>
        <p class="text-xl md:text-2xl mb-8 text-gray-200 max-w-3xl mx-auto">
            Plan extraordinary trips, discover amazing destinations, and create unforgettable memories with our comprehensive travel planning platform.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a asp-page="/Destinations/Index" class="bg-accent hover:bg-yellow-600 text-dark font-semibold px-8 py-4 rounded-lg text-lg transition duration-300 transform hover:scale-105 shadow-lg">
                <i class="fas fa-compass mr-2"></i>
                Explore Destinations
            </a>
            <a asp-page="/Trips/Create" class="bg-transparent border-2 border-white hover:bg-white hover:text-primary text-white font-semibold px-8 py-4 rounded-lg text-lg transition duration-300 transform hover:scale-105">
                <i class="fas fa-route mr-2"></i>
                Plan Your Trip
            </a>
        </div>
    </div>

    <!-- Floating Elements -->
    <div class="absolute top-20 left-10 opacity-20">
        <i class="fas fa-plane text-6xl animate-bounce"></i>
    </div>
    <div class="absolute bottom-20 right-10 opacity-20">
        <i class="fas fa-globe text-6xl animate-pulse"></i>
    </div>
</section>

<!-- Features Section -->
<section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
            <h2 class="text-4xl font-bold text-gray-900 mb-4">Why Choose TravelPlanner?</h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">
                We make travel planning simple, efficient, and enjoyable with our cutting-edge features.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <!-- Feature 1 -->
            <div class="text-center p-6 bg-gray-50 rounded-xl hover:shadow-lg transition duration-300">
                <div class="w-16 h-16 bg-primary text-white rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-map-marked-alt text-2xl"></i>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 mb-3">Smart Trip Planning</h3>
                <p class="text-gray-600">
                    Create detailed itineraries with multiple destinations, automatic time calculations, and cost estimations.
                </p>
            </div>

            <!-- Feature 2 -->
            <div class="text-center p-6 bg-gray-50 rounded-xl hover:shadow-lg transition duration-300">
                <div class="w-16 h-16 bg-accent text-white rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-hotel text-2xl"></i>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 mb-3">Best Hotel Deals</h3>
                <p class="text-gray-600">
                    Find and compare hotels with detailed information, ratings, and competitive pricing for your stay.
                </p>
            </div>

            <!-- Feature 3 -->
            <div class="text-center p-6 bg-gray-50 rounded-xl hover:shadow-lg transition duration-300">
                <div class="w-16 h-16 bg-secondary text-white rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-calculator text-2xl"></i>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 mb-3">Cost Calculator</h3>
                <p class="text-gray-600">
                    Get accurate trip cost estimates including accommodation, transportation, and activities.
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Popular Destinations Section -->
<section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
            <h2 class="text-4xl font-bold text-gray-900 mb-4">Popular Destinations</h2>
            <p class="text-xl text-gray-600">
                Discover the world's most amazing places and start planning your next adventure.
            </p>
        </div>

        @if (Model.Destinations.Any())
        {
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                @foreach (var destination in Model.Destinations)
                {
                    <div class="bg-white rounded-xl shadow-lg overflow-hidden card-hover cursor-pointer transform transition duration-300 hover:scale-105">
                        <div class="relative h-56 bg-gradient-to-br from-blue-400 to-purple-500">
                            @if (!string.IsNullOrEmpty(destination.ImagePath))
                            {
                                <img src="@destination.ImagePath" alt="@destination.Name" class="w-full h-full object-cover">
                            }
                            <div class="absolute inset-0 bg-black opacity-30"></div>
                            <div class="absolute bottom-4 left-4 text-white">
                                <h3 class="text-2xl font-bold mb-1">@destination.Name</h3>
                                <p class="text-sm opacity-90 flex items-center">
                                    <i class="fas fa-map-marker-alt mr-2"></i>
                                    @destination.City, @destination.Country
                                </p>
                            </div>
                        </div>

                        <div class="p-6">
                            <p class="text-gray-600 mb-4 line-clamp-3 leading-relaxed">
                                @destination.Description
                            </p>

                            <div class="flex items-center justify-between mb-4 text-sm">
                                <div class="flex items-center text-green-600 bg-green-50 px-3 py-1 rounded-full">
                                    <i class="fas fa-calendar-alt mr-2"></i>
                                    <span class="font-medium">@destination.BestTimeToVisit</span>
                                </div>
                                <div class="flex items-center text-blue-600">
                                    <i class="fas fa-star mr-1"></i>
                                    <span class="font-medium">@destination.AverageRating</span>
                                    <span class="text-gray-500 ml-1">(@destination.ReviewCount reviews)</span>
                                </div>
                            </div>

                            <div class="flex items-center justify-between mb-4">
                                <div class="flex items-center text-sm text-gray-500">
                                    <i class="fas fa-hotel mr-1"></i>
                                    @destination.Hotels.Count Hotels Available
                                </div>
                            </div>

                            <div class="flex gap-3">
                                <a asp-page="/Destinations/Details" asp-route-id="@destination.Id"
                                   class="flex-1 bg-primary hover:bg-secondary text-white text-center py-3 px-4 rounded-lg transition duration-300 font-medium shadow-md hover:shadow-lg">
                                    <i class="fas fa-eye mr-2"></i>
                                    Explore Now
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }

    </div>
</section>

<!-- CTA Section -->
<section class="py-16 bg-primary text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-4xl font-bold mb-4">Ready to Start Your Journey?</h2>
        <p class="text-xl mb-8 text-blue-100 max-w-2xl mx-auto">
            Join thousands of travelers who trust TravelPlanner to create their perfect adventures.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
            @if (User.Identity?.IsAuthenticated != true)
            {
                <a asp-area="Identity" asp-page="/Account/Register" class="bg-accent hover:bg-yellow-600 text-dark font-semibold px-8 py-4 rounded-lg text-lg transition duration-300 transform hover:scale-105">
                    <i class="fas fa-user-plus mr-2"></i>
                    Sign Up Free
                </a>
            }
            <a asp-page="/Trips/Create" class="bg-transparent border-2 border-white hover:bg-white hover:text-primary text-white font-semibold px-8 py-4 rounded-lg text-lg transition duration-300 transform hover:scale-105">
                <i class="fas fa-route mr-2"></i>
                Start Planning
            </a>
        </div>
    </div>
</section>

<style>
    .line-clamp-3 {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .animate-fade-in {
        animation: fadeIn 1s ease-in;
    }
</style>