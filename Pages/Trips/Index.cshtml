@page
@model TravelPlannerr.Pages.Trips.IndexModel
@{
    ViewData["Title"] = "My Trips";
}

<h1 class="text-2xl font-bold mb-6">My Trips</h1>

<a asp-page="Create" class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded mb-4">
    + Create New Trip
</a>

@if (Model.Trips == null || !Model.Trips.Any())
{
    <div class="bg-blue-100 text-blue-800 p-4 rounded">
        You have no trips yet. Create one!
    </div>
}
else
{
    <div class="overflow-x-auto">
        <table class="min-w-full bg-white shadow rounded-lg">
            <thead class="bg-gray-200 text-gray-700">
                <tr>
                    <th class="px-4 py-2 text-left">Name</th>
                    <th class="px-4 py-2 text-left">Start Date</th>
                    <th class="px-4 py-2 text-left">End Date</th>
                    <th class="px-4 py-2 text-left">Total Days</th>
                    <th class="px-4 py-2 text-left">Destinations</th>
                    <th class="px-4 py-2 text-left">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var trip in Model.Trips)
                {
                    <tr class="border-b hover:bg-gray-50">
                        <td class="px-4 py-2">@trip.Name</td>
                        <td class="px-4 py-2">@trip.StartDate.ToShortDateString()</td>
                        <td class="px-4 py-2">@trip.EndDate.ToShortDateString()</td>
                        <td class="px-4 py-2">@trip.TotalDays</td>
                        <td class="px-4 py-2">
                            @if (trip.TripDestinations != null && trip.TripDestinations.Any())
                            {
                                <ul class="list-disc list-inside text-sm">
                                    @foreach (var td in trip.TripDestinations)
                                    {
                                        <li>@td.Destination?.Name</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <span class="italic text-gray-500">No destinations</span>
                            }
                        </td>
                        <td class="px-4 py-2 space-x-2">
                            <a asp-page="Edit" asp-route-id="@trip.Id"
                               class="text-yellow-600 hover:underline">Edit</a>
                            <a asp-page="Details" asp-route-id="@trip.Id"
                               class="text-blue-600 hover:underline">Details</a>
                            <a asp-page="Delete" asp-route-id="@trip.Id"
                               class="text-red-600 hover:underline">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
