@page
@model TravelPlanner.Pages.Account.RegisterModel

<form method="post" class="max-w-md mx-auto mt-10 p-6 border rounded shadow">
    <h2 class="text-2xl mb-6 text-center font-bold">Register</h2>

    <div class="mb-4">
        <label asp-for="Input.Name"></label>
        <input asp-for="Input.Name" class="w-full border rounded px-3 py-2" />
        <span asp-validation-for="Input.Name" class="text-red-600 text-sm"></span>
    </div>
    <div class="mb-4">
        <label asp-for="Input.Email"></label>
        <input asp-for="Input.Email" class="w-full border rounded px-3 py-2" />
        <span asp-validation-for="Input.Email" class="text-red-600 text-sm"></span>
    </div>
    <div class="mb-4">
        <label asp-for="Input.Password"></label>
        <input asp-for="Input.Password" type="password" class="w-full border rounded px-3 py-2" />
        <span asp-validation-for="Input.Password" class="text-red-600 text-sm"></span>
    </div>
    <div class="mb-6">
        <label asp-for="Input.ConfirmPassword"></label>
        <input asp-for="Input.ConfirmPassword" type="password" class="w-full border rounded px-3 py-2" />
        <span asp-validation-for="Input.ConfirmPassword" class="text-red-600 text-sm"></span>
    </div>
    <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white py-2 rounded font-semibold">Register</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
